<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test_task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/for_toolbar</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/main_background</item>
        <item name="android:textColor">@color/for_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonAccent" parent="Theme.Test_task">
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:backgroundTint">@color/for_button</item>
        <item name="android:textColor">#716646</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>